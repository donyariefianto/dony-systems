  {
   "id": "folder_transaksi",
   "name": "Transaksi",
   "icon": "fas fa-shopping-cart",
   "type": "group",
   "sub_sidemenu": [
    {
     "id": "trx_penjualan",
     "name": "Sales Order (Kasir)",
     "icon": "fas fa-cash-register",
     "type": "tableview",
     "path": "transactions/sales",
     "config": {
      "endpoint": "/api/resource",
      "collectionName": "trx",
      "fields": [
       {
        "name": "name",
        "label": "waktu",
        "type": "date",
        "required": true
       },
       {
        "name": "items",
        "label": "item",
        "type": "repeater",
        "required": true,
        "_isOpen": true,
        "sub_fields": [
         {
          "name": "produk",
          "label": "Produk",
          "type": "relation",
          "width": "auto",
          "relation": {
           "collection": "products",
           "display": "product_name",
           "enable_auto_populate": true,
           "auto_populate": {
            "price": "price"
           }
          }
         },
         {
          "name": "qty",
          "label": "QTY",
          "type": "number",
          "width": "auto"
         },
         {
          "name": "sub_total",
          "label": "Sub Total",
          "type": "number",
          "width": "auto",
          "calculation": {
           "is_enabled": true,
           "operation": "multiply",
           "fields": ["price", "qty"]
          }
         },
         {
          "name": "price",
          "label": "Harga",
          "type": "number",
          "width": "auto",
          "ui": {
           "readonly": true
          }
         }
        ]
       },
       {
        "name": "total",
        "label": "total",
        "type": "number",
        "required": false,
        "_isOpen": true,
        "calculation": {
         "is_enabled": true,
         "operation": "sum",
         "fields": ["items.sub_total"]
        },
        "ui": {
         "readonly": true
        }
       }
      ]
     }
    }
   ]
  },
  {
   "id": "fixed_settings",
