  {
   "id": "example",
   "name": "Example",
   "icon": "fas fa-home",
   "sub_sidemenu": [
    {
     "id": "demo_sales",
     "name": "Transaksi Penjualan",
     "icon": "fas fa-shopping-cart",
     "type": "tableview",
     "path": "sales/orders",
     "permissions": ["admin", "user"],
     "config": {
      "endpoint": "/api/collections/sales_orders",
      "collectionName": "sales_orders",
      "fields": [
       {
        "name": "transaction_code",
        "label": "No. Transaksi",
        "type": "text",
        "required": true,
        "width": "50",
        "ui": {
         "readonly": true
        },
        "defaultValue": "INV-AUTO-001"
       },
       {
        "name": "transaction_date",
        "label": "Tanggal Transaksi",
        "type": "date",
        "required": true,
        "width": "50"
       },
       {
        "name": "customer_id",
        "label": "Pilih Pelanggan",
        "type": "relation",
        "required": true,
        "width": "100",
        "relation": {
         "collection": "customers",
         "key": "_id",
         "display": "fullname",
         "auto_populate": {
          "email": "cust_email",
          "address": "shipping_address"
         }
        }
       },
       {
        "name": "cust_email",
        "label": "Email Pelanggan",
        "type": "text",
        "width": "50",
        "ui": {
         "readonly": true
        }
       },
       {
        "name": "shipping_address",
        "label": "Alamat Pengiriman",
        "type": "textarea",
        "width": "100",
        "ui": {
         "readonly": false
        }
       },
       {
        "name": "status",
        "label": "Status Pesanan",
        "type": "select",
        "options": ["Draft", "Pending Payment", "Processing", "Shipped", "Completed", "Cancelled"],
        "width": "50",
        "defaultValue": "Draft"
       },
       {
        "name": "payment_method",
        "label": "Metode Pembayaran",
        "type": "select",
        "options": ["Transfer Bank", "Kartu Kredit", "Tunai", "E-Wallet"],
        "width": "50"
       },
       {
        "name": "items",
        "label": "Daftar Barang Belanjaan",
        "type": "repeater",
        "width": "100",
        "sub_fields": [
         {
          "name": "product_id",
          "label": "Produk",
          "type": "relation",
          "relation": {
           "collection": "products",
           "key": "_id",
           "display": "product_name",
           "auto_populate": {
            "price": "unit_price"
           }
          }
         },
         {
          "name": "qty",
          "label": "Qty",
          "type": "number",
          "defaultValue": 1
         },
         {
          "name": "unit_price",
          "label": "Harga Satuan",
          "type": "currency",
          "ui": {
           "readonly": true
          }
         },
         {
          "name": "subtotal",
          "label": "Subtotal",
          "type": "currency",
          "ui": {
           "readonly": true
          },
          "calculation": {
           "operation": "multiply",
           "fields": ["qty", "unit_price"]
          }
         }
        ]
       },
       {
        "name": "grand_total",
        "label": "Total Tagihan",
        "type": "currency",
        "width": "100",
        "ui": {
         "readonly": true
        }
       },
       {
        "name": "notes",
        "label": "Catatan Tambahan",
        "type": "textarea",
        "width": "100"
       },
       {
        "name": "is_paid",
        "label": "Sudah Lunas?",
        "type": "boolean",
        "width": "50"
       },
       {
        "name": "proof_image",
        "label": "Bukti Transfer",
        "type": "image",
        "width": "50"
       }
      ]
     }
    },
    {
     "id": "library_loans",
