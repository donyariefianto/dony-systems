<!DOCTYPE html>
<html lang="id">
 <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
   System
  </title>
  <link rel="icon" href="data:," />
  @vite(['resources/css/app.css', 'resources/js/main.js'])

 </head>
 <body class="bg-gray-100 overflow-hidden">
  <div
   id="splash-screen"
   class="fixed inset-0 z-[10000] flex flex-col items-center justify-center bg-gradient-to-br from-zinc-50 via-white to-zinc-100/80 transition-all duration-1000 overflow-hidden"
  >
   <!-- Background Effects -->
   <div class="absolute inset-0 overflow-hidden">
    <!-- Animated Gradient Orbs -->
    <div
     class="absolute top-1/4 -left-20 w-96 h-96 bg-gradient-to-r from-zinc-200/40 to-zinc-300/30 rounded-full blur-3xl animate-float-slow"
    >
    </div>
    <div
     class="absolute bottom-1/4 -right-20 w-96 h-96 bg-gradient-to-l from-zinc-300/30 to-zinc-400/20 rounded-full blur-3xl animate-float-slow"
     style="animation-delay: 1s;"
    >
    </div>
    <div
     class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-gradient-to-br from-zinc-100/50 to-zinc-200/30 rounded-full blur-3xl animate-pulse-subtle"
    >
    </div>

    <!-- Geometric Pattern Overlay -->
    <div class="absolute inset-0 opacity-5">
     <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle at 1px 1px, rgb(113 113 122 / 0.2) 1px, transparent 0); background-size: 40px 40px;"
     >
     </div>
    </div>

    <!-- Gradient Border Effect -->
    <div
     class="absolute inset-0 border-[16px] border-transparent"
     style="background: linear-gradient(135deg, rgba(161, 161, 170, 0.1) 0%, rgba(113, 113, 122, 0.05) 100%) border-box; mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"
    >
    </div>
   </div>

   <!-- Main Content -->
   <div
    id="splash-content"
    class="relative z-10 flex flex-col items-center opacity-0 scale-95 transition-all duration-700"
   >
    <!-- Logo Container with Depth Effect -->
    <div class="relative mb-10">
     <!-- Shadow Effect -->
     <div
      class="absolute inset-0 bg-gradient-to-br from-zinc-400/20 to-zinc-600/10 rounded-[2.5rem] blur-xl -rotate-3 scale-105"
     >
     </div>

     <!-- Glow Effect -->
     <div
      class="absolute -inset-2 bg-gradient-to-tr from-zinc-400/30 via-transparent to-zinc-500/20 rounded-[2.5rem] blur-md opacity-60 animate-glow"
     >
     </div>

     <!-- Main Logo -->
     <div
      class="relative w-28 h-28 bg-gradient-to-br from-zinc-100 to-zinc-50 rounded-[2.5rem] shadow-2xl shadow-zinc-300/50 flex items-center justify-center transform -rotate-3 border border-zinc-200/80 backdrop-blur-sm"
     >
      <!-- Inner Shadow -->
      <div class="absolute inset-4 rounded-2xl shadow-inner shadow-zinc-300/30">
      </div>

      <!-- Accent Glow -->
      <div
       class="absolute -inset-1 bg-gradient-to-tr from-zinc-300/20 to-zinc-400/10 rounded-[2.5rem] blur-sm"
      >
      </div>

      <!-- Icon Container -->
      <div
       class="relative w-20 h-20 bg-gradient-to-br from-zinc-700 to-zinc-800 rounded-2xl flex items-center justify-center shadow-lg shadow-zinc-900/30"
      >
       <i
        id="splash-icon"
        class="fas fa-cube text-zinc-100 text-3xl transform rotate-6 transition-transform duration-1000"
       ></i>

       <!-- Icon Reflection -->
       <div
        class="absolute top-1 left-1 right-1 h-4 bg-gradient-to-b from-white/20 to-transparent rounded-t-2xl opacity-40"
       >
       </div>
      </div>

      <!-- Corner Accents -->
      <div
       class="absolute -top-2 -right-2 w-6 h-6 bg-gradient-to-br from-zinc-500 to-zinc-600 rounded-full border-2 border-zinc-100"
      >
      </div>
      <div
       class="absolute -bottom-2 -left-2 w-6 h-6 bg-gradient-to-br from-zinc-500 to-zinc-600 rounded-full border-2 border-zinc-100"
      >
      </div>
     </div>
    </div>

    <!-- Text Content -->
    <div class="text-center space-y-4 mb-12">
     <h1
      id="splash-name"
      class="text-4xl font-black bg-gradient-to-r from-zinc-800 via-zinc-700 to-zinc-800 bg-clip-text text-transparent tracking-tight"
     >
      Loading System
     </h1>

     <div class="space-y-2">
      <p class="text-xs font-semibold text-zinc-500 uppercase tracking-[0.3em]">
       Initializing Components
      </p>
      <p class="text-sm text-zinc-400 font-medium">
       Preparing your experience
      </p>
     </div>
    </div>

    <!-- Progress Container -->
    <div class="w-80 space-y-4">
     <!-- Progress Bar -->
     <div class="relative">
      <!-- Progress Track -->
      <div
       class="w-full h-2.5 bg-gradient-to-r from-zinc-200/80 to-zinc-300/60 rounded-full overflow-hidden backdrop-blur-sm border border-zinc-300/50 shadow-inner shadow-zinc-300/30"
      >
       <!-- Progress Fill -->
       <div
        id="splash-progress"
        class="h-full bg-gradient-to-r from-zinc-600 via-zinc-500 to-zinc-400 w-0 rounded-full relative overflow-hidden transition-all duration-300"
       >
        <!-- Shimmer Effect -->
        <div
         class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full animate-shimmer"
        >
        </div>

        <!-- Glow Effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-zinc-400/20 to-zinc-300/10 blur-sm">
        </div>
       </div>
      </div>

      <!-- Progress Dots -->
      <div class="flex justify-between w-full mt-2 px-1">
       <div class="w-1.5 h-1.5 rounded-full bg-zinc-400/40">
       </div>
       <div class="w-1.5 h-1.5 rounded-full bg-zinc-400/40">
       </div>
       <div class="w-1.5 h-1.5 rounded-full bg-zinc-400/40">
       </div>
       <div class="w-1.5 h-1.5 rounded-full bg-zinc-400/40">
       </div>
       <div class="w-1.5 h-1.5 rounded-full bg-zinc-400/40">
       </div>
      </div>
     </div>

     <!-- Progress Percentage -->
     <div class="text-center">
      <div id="progress-percentage" class="text-sm font-bold text-zinc-700">
       0%
      </div>
      <div class="text-xs text-zinc-400 font-medium mt-1">
       Please wait...
      </div>
     </div>
    </div>

    <!-- Loading Dots -->
    <div class="flex space-x-2 mt-8">
     <div class="w-2 h-2 rounded-full bg-zinc-400 animate-bounce" style="animation-delay: 0s">
     </div>
     <div class="w-2 h-2 rounded-full bg-zinc-400 animate-bounce" style="animation-delay: 0.2s">
     </div>
     <div class="w-2 h-2 rounded-full bg-zinc-400 animate-bounce" style="animation-delay: 0.4s">
     </div>
    </div>
   </div>

   <!-- Footer Note -->
   <div class="absolute bottom-8 text-center">
    <p class="text-xs text-zinc-400/60 font-medium">
     Â© 2024 System
    </p>
   </div>
  </div>

  <div class="flex h-screen overflow-hidden">

   <aside
    id="sidebar"
    class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 text-gray-300 transition-transform duration-300 ease-in-out flex flex-col -translate-x-full lg:translate-x-0 lg:static"
   >
    <div class="p-5 border-b border-gray-800 flex items-center justify-between">
     <div class="flex items-center gap-3">
      <div
       id="app-short-name"
       class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center font-bold text-white text-sm"
      >
      </div>
      <span id="app-name" class="text-xl font-bold text-white tracking-tighter uppercase"></span>
     </div>
     <button onclick="toggleSidebar()" class="lg:hidden text-gray-400">
      <i class="fas fa-times"></i>
     </button>
    </div>

    <nav id="menu-container" class="flex-1 overflow-y-auto p-4 space-y-1 custom-scrollbar">
    </nav>
    <div class="flex flex-col gap-3 px-6 py-5">
     <div class="flex items-center justify-between">
      <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">System</span>
      <div class="flex gap-2">
       <button
        onclick="window.toggleTheme()"
        id="btn-theme-toggle"
        class="w-8 h-8 rounded-full border border-slate-200 bg-white text-slate-500 hover:border-indigo-300 hover:text-indigo-600 transition-all flex items-center justify-center shadow-sm"
       >
        <i class="fa-solid fa-moon text-xs"></i>
       </button>
       <button
        id="btn-refresh-menu"
        onclick="window.refreshSidebarMenu()"
        class="w-8 h-8 rounded-full border border-slate-200 bg-white text-slate-500 hover:border-blue-300 hover:text-blue-600 transition-all flex items-center justify-center shadow-sm group"
       >
        <i class="fas fa-sync-alt text-xs group-active:rotate-180 transition-transform duration-500"></i>
       </button>
      </div>
     </div>

     <button
      onclick="window.logout()"
      class="w-full flex items-center justify-center gap-2 px-4 py-2.5 bg-white border border-slate-200 hover:border-rose-200 hover:bg-rose-50 text-slate-600 hover:text-rose-600 rounded-xl shadow-sm hover:shadow transition-all group active:scale-[0.98]"
     >
      <i class="fa-solid fa-power-off text-xs opacity-50 group-hover:opacity-100"></i>
      <span class="text-sm font-semibold">Log Out Session</span>
     </button>
    </div>
    <div class="p-4 border-t border-gray-800 text-[10px] text-center text-gray-500 uppercase">
     Versions v1.0
    </div>
   </aside>

   <div class="flex-1 flex flex-col min-w-0">
    <header class="bg-white border-b h-16 flex items-center justify-between px-4 lg:px-8 shadow-sm shrink-0">
     <div class="flex items-center gap-4">
      <button onclick="toggleSidebar()" class="lg:hidden p-2 text-gray-600">
       <i class="fas fa-bars"></i>
      </button>
      <h2 id="page-title" class="text-sm font-bold text-gray-700 uppercase tracking-widest">
       Dashboard
      </h2>
     </div>

     <div class="flex items-center gap-4">
      <div class="flex items-center gap-3 border-l pl-4">
       <div class="text-right hidden sm:block">
        <p class="text-xs font-bold text-gray-800 uppercase">
         Admin
        </p>
        <p class="text-[10px] text-green-600 font-semibold uppercase">
         Online
        </p>
       </div>
       <div class="w-9 h-9 bg-gray-100 border rounded-full flex items-center justify-center">
        <i class="fas fa-user-shield text-gray-400 text-sm"></i>
       </div>
      </div>
     </div>
    </header>

    <main id="main-view" class="flex-1 overflow-hidden bg-[#f8fafc]">
    </main>
   </div>

   <div
    id="crud-modal"
    class="fixed inset-0 z-[60] flex items-center justify-center bg-gray-900/60 backdrop-blur-sm hidden opacity-0 transition-all duration-300 ease-out"
   >
    <div
     id="modal-container"
     class="bg-white rounded-2xl shadow-2xl w-full max-w-lg overflow-hidden m-4 transform scale-95 transition-all duration-300 ease-out border border-gray-100"
    >
     <div class="px-6 py-4 border-b flex justify-between items-center bg-white">
      <div class="flex items-center gap-3">
       <div class="w-2 h-6 bg-blue-600 rounded-full">
       </div>
       <h3 id="modal-title" class="font-black text-gray-800 text-xs uppercase tracking-widest">
        Konfigurasi Data
       </h3>
      </div>
      <button
       onclick="closeModal()"
       class="w-8 h-8 flex items-center justify-center rounded-full text-gray-400 hover:bg-red-50 hover:text-red-500 transition-all"
      >
       <i class="fas fa-times"></i>
      </button>
     </div>

     <form
      id="dynamic-form"
      class="p-8 space-y-5 max-h-[70vh] overflow-y-auto custom-scrollbar bg-gray-50/30"
     >
     </form>

     <div class="px-6 py-4 border-t bg-white flex gap-3">
      <button
       type="button"
       onclick="closeModal()"
       class="flex-1 py-3 text-[10px] font-black border border-gray-200 text-gray-500 rounded-xl hover:bg-gray-50 transition-all uppercase tracking-widest"
      >
       Batalkan
      </button>
      <button
       type="submit"
       form="dynamic-form"
       class="flex-[2] py-3 text-[10px] font-black bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-all uppercase tracking-widest shadow-lg shadow-blue-200 active:scale-95"
      >
       Simpan Perubahan
      </button>
     </div>
    </div>
   </div>

   <div id="overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden">
   </div>
  </div>
  <div id="toast-container" class="fixed bottom-5 right-5 z-[100] space-y-3">
  </div>
 </body>
 <script src='/resources/js/utils/ecStat.js'>

 </script>
</html>
